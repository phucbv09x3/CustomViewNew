<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.monstar_lab_lifetime.customviewnew.CustomView
        android:layout_width="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:colorSmile="#FF4081"
        app:sizeText="30dp"
        android:id="@+id/image_custom"
        app:colorStroke="#448AFF"
        app:colorCenter="#000000"
        android:layout_height="250dp"/>
    <com.monstar_lab_lifetime.customviewnew.CustomHeart
        android:layout_width="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/image_heart"
        app:layout_constraintTop_toBottomOf="@id/image_custom"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_height="180dp"/>
    <com.monstar_lab_lifetime.customviewnew.CustomRo
        android:layout_width="180dp"
        android:layout_marginTop="20dp"
        android:id="@+id/image_ro"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_custom"
        android:layout_height="180dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>